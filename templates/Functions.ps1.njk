function Write-Log { 
    param 
    ( 
        [string]$text 
    ) 

    $msg = "$(Get-Date -format F) $text"
    Write-Host $msg
    Write-Output $msg | Out-File 'log.txt' -Append
}

function Write-Exception {
    param(
        [EXCEPTION]$ex
    )

    $msg = "$(Get-Date -format F) EXCEPTION! $ex"
    Write-Host $msg -ForegroundColor Red
    Write-Output $msg | Out-File 'log.txt' -Append
}

